<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.5.9</version>
        <relativePath/>
    </parent>

    <groupId>com.vaporant</groupId>
    <artifactId>vaporant</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>vaporant</name>
    <description>Vaporant E-Commerce</description>

    <!-- IMPORTANTE: packaging war per usare JSP in modo corretto -->
    <packaging>war</packaging>

    <properties>
        <java.version>17</java.version>
        <!-- Override Tomcat version to fix security vulnerabilities -->
        <tomcat.version>10.1.47</tomcat.version>
        
        <!-- Test dependencies versions -->
        <junit.version>5.10.1</junit.version>
        <jmh.version>1.37</jmh.version>
        
        <!-- Plugin versions -->
        <surefire.version>3.2.5</surefire.version>
        <jacoco.version>0.8.11</jacoco.version>
        <pitest.version>1.15.3</pitest.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-jdbc</artifactId>
        </dependency>

        <dependency>
            <groupId>com.mysql</groupId>
            <artifactId>mysql-connector-j</artifactId>
            <version>9.5.0</version>
            <scope>runtime</scope>
        </dependency>

        <!-- JSP support -->
        <dependency>
            <groupId>org.apache.tomcat.embed</groupId>
            <artifactId>tomcat-embed-jasper</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>jakarta.servlet.jsp.jstl</groupId>
            <artifactId>jakarta.servlet.jsp.jstl-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.glassfish.web</groupId>
            <artifactId>jakarta.servlet.jsp.jstl</artifactId>
        </dependency>

        <!-- Jakarta Servlet API -->
        <dependency>
            <groupId>jakarta.servlet</groupId>
            <artifactId>jakarta.servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        
        <!-- JUnit Jupiter Params for Parameterized Tests -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-params</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        
        <!-- JMH Core for Microbenchmarking -->
        <dependency>
            <groupId>org.openjdk.jmh</groupId>
            <artifactId>jmh-core</artifactId>
            <version>${jmh.version}</version>
            <scope>test</scope>
        </dependency>
        
        <!-- JMH Annotation Processor -->
        <dependency>
            <groupId>org.openjdk.jmh</groupId>
            <artifactId>jmh-generator-annprocess</artifactId>
            <version>${jmh.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Avvia il WAR come fat-jar (embedded Tomcat) -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            
            <!-- Surefire Plugin for Test Execution -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${surefire.version}</version>
                <configuration>
                    <useModulePath>false</useModulePath>
                </configuration>
            </plugin>

            <!-- Costruzione WAR con webapp (JSP in src/main/webapp) -->
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.4.0</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                    <packagingExcludes>WEB-INF/lib/servlet-api*.jar</packagingExcludes>
                </configuration>
            </plugin>
            
            <!-- JaCoCo Code Coverage Plugin -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>${jacoco.version}</version>
                <executions>
                    <!-- 1. Prepare Agent: Instrumenta il codice -->
                    <execution>
                        <id>prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    
                    <!-- 2. Report: Genera report HTML e XML dopo test -->
                    <execution>
                        <id>report</id>
                        <phase>test</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                        <configuration>
                            <excludes>
                                <!-- Bean puri (solo getter/setter, nessuna logica) -->
                                <exclude>com/vaporant/model/AddressBean.class</exclude>
                                <exclude>com/vaporant/model/ContenutoBean.class</exclude>
                                <exclude>com/vaporant/model/OrderBean.class</exclude>
                                <exclude>com/vaporant/model/ProductBean.class</exclude>
                                <exclude>com/vaporant/model/UserBean.class</exclude>
                                
                                <!-- Utility class senza logica -->
                                <exclude>com/vaporant/model/AddressList.class</exclude>
                                
                                <!-- Application entry point -->
                                <exclude>com/vaporant/VaporantApplication.class</exclude>
                                
                                <!-- NOTA: Cart.java NON escluso - ha logica business -->
                            </excludes>
                        </configuration>
                    </execution>
                    
                    <!-- 3. Check: Verifica thresholds (CRITICAL for Criterion #5) -->
                    <execution>
                        <id>check</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <configuration>
                            <excludes>
                                <!-- IDENTICO a report execution per consistency -->
                                <exclude>com/vaporant/model/AddressBean.class</exclude>
                                <exclude>com/vaporant/model/ContenutoBean.class</exclude>
                                <exclude>com/vaporant/model/OrderBean.class</exclude>
                                <exclude>com/vaporant/model/ProductBean.class</exclude>
                                <exclude>com/vaporant/model/UserBean.class</exclude>
                                <exclude>com/vaporant/model/AddressList.class</exclude>
                                <exclude>com/vaporant/VaporantApplication.class</exclude>
                            </excludes>
                            <rules>
                                <rule>
                                    <element>BUNDLE</element>
                                    <limits>
                                        <!-- Line Coverage: 80% -->
                                        <limit>
                                            <counter>LINE</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.80</minimum>
                                        </limit>
                                        <!-- Branch Coverage: 80% -->
                                        <limit>
                                            <counter>BRANCH</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.80</minimum>
                                        </limit>
                                    </limits>
                                </rule>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <!-- PiTest Mutation Testing Plugin (Criterion #6) -->
            <plugin>
                <groupId>org.pitest</groupId>
                <artifactId>pitest-maven</artifactId>
                <version>${pitest.version}</version>
                
                <!-- CRITICAL: JUnit 5 Plugin Dependency -->
                <dependencies>
                    <dependency>
                        <groupId>org.pitest</groupId>
                        <artifactId>pitest-junit5-plugin</artifactId>
                        <version>1.2.3</version>
                    </dependency>
                </dependencies>
                
                <configuration>
                    <!-- Target Classes to Mutate -->
                    <targetClasses>
                        <param>com.vaporant.controller.*</param>
                        <param>com.vaporant.repository.*</param>
                        <param>com.vaporant.util.*</param>
                    </targetClasses>
                    
                    <!-- Target Tests to Execute -->
                    <targetTests>
                        <param>com.vaporant.controller.*</param>
                        <param>com.vaporant.repository.*</param>
                        <param>com.vaporant.util.*</param>
                    </targetTests>
                    
                    <!-- Excluded Classes (aligned with JaCoCo) -->
                    <excludedClasses>
                        <!-- ALLINEATO con JaCoCo - esclusioni esplicite -->
                        <param>com.vaporant.model.AddressBean</param>
                        <param>com.vaporant.model.ContenutoBean</param>
                        <param>com.vaporant.model.OrderBean</param>
                        <param>com.vaporant.model.ProductBean</param>
                        <param>com.vaporant.model.UserBean</param>
                        <param>com.vaporant.model.AddressList</param>
                        <param>com.vaporant.VaporantApplication</param>
                    </excludedClasses>
                    
                    <!-- Output Formats -->
                    <outputFormats>
                        <outputFormat>XML</outputFormat>
                        <outputFormat>HTML</outputFormat>
                    </outputFormats>
                    
                    <!-- Quality Gates - TEMPORANEAMENTE DISABILITATI per Iteration 1 baseline -->
                    <!-- <mutationThreshold>50</mutationThreshold> -->      <!-- 50% mutation score -->
                    <!-- <coverageThreshold>80</coverageThreshold> -->      <!-- 80% mutation coverage -->
                    
                    <!-- Performance Optimization -->
                    <timestampedReports>false</timestampedReports>
                    <threads>4</threads>
                    <timeoutConstant>3000</timeoutConstant>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
